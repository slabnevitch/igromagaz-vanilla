extends _misc/main


block title
	| Личный кабинет | Бонусный счет

block content
	- var current = 3;
	.wrapper
		ul.breadcrumbs
			li.breadcrumbs__item 
				a(href="#").breadcrumbs__link Главная
			li.breadcrumbs__item 
				a(href="#").breadcrumbs__link Личный кабинет
			li.breadcrumbs__item 
				span.breadcrumbs__link Личные данные

	.page.page-lk.page-lk-password
		.wrapper-smart
			.wrapper-flex.page-lk__wrap
				include _blocks/lk-sidebar
				
				.page-lk__content
					.lk-header(data-da="page-lk__wrap,991,first")
						h1 Смена пароля
						p Настоятельно не рекомендуем использовать один и тот же пароль для других интернет-магазинов. От сложности и сохранности зависит неприкосновенность вашего личного кабинета и бонусного счета.
					
					.lk-password-form
						form.form(action="#")
							label.form__label
								span.form__field-name Новый пароль:
								input(autocomplete="off" type="text" name="name" class="form__input" placeholder="***********************")

							label.form__label
								span.form__field-name Подтверждение пароля:
								input(autocomplete="off" type="text" name="name" class="form__input" placeholder="***********************")
					
						.lk-search-form__bottom
							button.btn.btn-bg-green Сохранить изменения
							a(href="#").link Отменить
