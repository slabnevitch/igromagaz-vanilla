extends _misc/main


block title
	| Личный кабинет | История заказов

block content
	- var current = 0;
	.wrapper
		ul.breadcrumbs
			li.breadcrumbs__item 
				a(href="#").breadcrumbs__link Главная
			li.breadcrumbs__item 
				a(href="#").breadcrumbs__link Личный кабинет
			li.breadcrumbs__item 
				span.breadcrumbs__link История заказов

	.page.page-lk.page-lk-history
		.wrapper-smart
			.wrapper-flex.page-lk__wrap
				include _blocks/lk-sidebar
				
				.page-lk__content
					.lk-min-header(data-da="page-lk__wrap,991,first")
						h1 История заказов
	
					.lk-search-form
						form.form(action="#")
							.lk-search-form__row
								label.form__label
									span.form__field-name Номер заказа:
									input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Введите номер")
								label.form__label
									span.form__field-name Заказ период
									input(autocomplete="off" type="text" name="name" class="form__input for-datepicker" placeholder="c")
								label.form__label
									input(autocomplete="off" type="text" name="name" class="form__input for-datepicker" placeholder="по" data-position="bottom right")

								label.form__label
									span.form__field-name Название товара:
									input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Название")
							
							.lk-search-form__radios
								.form__field-name Статус:
								- var checks2 = ['Все', 'Оплачен','Не оплачен', 'Отменен'];
									each check, i in checks2
										label.radio-label
											input( type="radio" name="status" class="radio-label__input" checked=i==0 ? "checked" : false)
											span.radio-label__check
											span.radio__text= check
							
							.lk-search-form__bottom
								button.btn.btn-bg-green Применить фильтр
								a(href="#").link Вернуть параметры по умолчанию

					.lk-history-table
						.lk-history-table__header
							.lk-history-table__row
									.lk-history-table__col #заказа, дата
									.lk-history-table__col
										.lk-history-table__col-block
											.lk-history-table__block-col Название
											.lk-history-table__block-col Кол-во
											.lk-history-table__block-col Сумма
									.lk-history-table__col Статус
									.lk-history-table__col Опции
						
						.lk-history-table__body
							.lk-history-table__row
								.lk-history-table__col №817409
									br
									| от 21.04.2022 16:32 

								.lk-history-table__col
									.lk-history-table__col-block
										.lk-history-table__block-col
											a(href="#") Карта оплаты World of Warcraft – 60 дней RU (ключ для ПК)'
										
										.lk-history-table__block-col 1 шт.
										.lk-history-table__block-col 1 500 руб.
								
								.lk-history-table__col
									.btn.btn-bg-green.btn-xs Оплачен
									p Отправлен

								.lk-history-table__col
									
									p
										a(href="#") Детали заказа
									
									p
										a(href="#") Ключи и инструкции

