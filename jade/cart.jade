extends _misc/main

block title
	| Корзина

block content
	.wrapper
		ul.breadcrumbs
			li.breadcrumbs__item 
				a(href="#").breadcrumbs__link Главная
			li.breadcrumbs__item 
				span.breadcrumbs__link  Корзина


	.page.page-cart
		.wrapper
			.block-header
				.block-header__text
					h1 Товары в корзине
					a(href="#").link Очистить корзину

		.page-cart__top
			.wrapper-smart
				.wrapper-flex
					.page-cart__content
						- for (var i=0; i < 3; i++)
							.product-line
								.product-img
									img(src="img/prod-card-img.jpg" alt="alt")
								.product-line__info
									a(href="#").product-title Карта оплаты World of Warcraft – 60 дней RU (ключ для ПК)
									.product-availability В наличии
									.product-delive Доставка цифрового ключа на e-mail
							
								.product-line__rigth
									.product-line__counter.counter(data-min="0")
										button.counter__button.counter-minus
											+icon('minus')
										input(autocomplete="off" type="text" name="name" value="1").counter__count
										button.counter__button.counter-plus
											+icon('plus')

									.product-line__price
										.product-price
											.sale-label -15%
											.product-price__old
												.product-price__fail 2749 руб.
											.product-price__standart 2549 руб.

								.product-line__close
									+icon('close')
					
					.page-cart__bar.bar-page-cart
						p Всего к оплате:
						.product-price__standart 4 638 руб.
						.product-bonus
								+icon('bonus')
								span 53 бонуса за покупку

						input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Купон на скидку")

						button.btn.btn-bg-green Применить
		
		include _sections/autorization
		.digital-delivery
		// include _sections/digital-delivery
