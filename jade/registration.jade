extends _misc/main-footer

block title
	| Регистрация

block content
	.page.page-authorization.page-registration
		.wrapper
			ul.breadcrumbs
				li.breadcrumbs__item 
					a(href="#").breadcrumbs__link Главная
				li.breadcrumbs__item 
					span.breadcrumbs__link  Регистрация

		.wrapper
			.autorization__header
				h1 Регистрация
				p Вы легко можете зарегистрироваться на нашем сайте или войти через сервис соцсетей.

			.autorization__forms
				.autorization__services
					.form__title Быстрый вход через сервис:
					ul.socials
						- var soc = ['facebook', 'twitter', 'vkontakte', 'odnoklassniki', 'google-plus', 'mask-group', 'yandex', 'mailru'];
							each item in soc
								li.socials__item
									a(href="#").socials__link
										img(src="img/socials/" + item + ".svg" alt="alt")

				form.form.autorization__enter.enter-autorization(action="#")
					.form__title Регистрация в ИгроМагаз:
					.enter-autorization__cols
						.enter-autorization__col
							label.form__label
								input(autocomplete="off" type="text" name="name" class="form__input" placeholder="E-mail")
							label.form__label
								input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Пароль")
							label.form__label
								input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Подтвердите пароль")

							label.check-label(data-da="password-requirements,767.98,last")
								input( type="checkbox" name="name" class="check-label__input")
								span.check-label__check
									+icon('check')
								span.check-label__text Согласен(на) на #[a(href="#").link-blue обработку персональных данных]

						.enter-autorization__col.password-requirements
							.password-requirements__title Требования к паролю:
							- var treba = ['Пароль должен быть не менее 8 символов длиной', 'содержать латинские символы верхнего регистра (A-Z)', 'содержать латинские символы нижнего регистра (a-z)', 'содержать цифры (0-9).'];
							ul.password-requirements__list
								each item in treba
									li= item

						.enter-autorization__col
							.enter-autorization__captcha Captcha

						.enter-autorization__col
							.enter-autorization__col-buttons
								button.btn.btn-bg-green Регистрация

