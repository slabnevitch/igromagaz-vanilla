extends _misc/main

block title
	| Личный кабинет | Список желаемого

block content
	- var current = 7;
	.wrapper
		ul.breadcrumbs
			li.breadcrumbs__item 
				a(href="#").breadcrumbs__link Главная
			li.breadcrumbs__item 
				a(href="#").breadcrumbs__link Личный кабинет
			li.breadcrumbs__item 
				span.breadcrumbs__link Список желаемого

	.page.page-lk.page-lk-wishes
		.wrapper-smart
			.wrapper-flex.page-lk__wrap
				include _blocks/lk-sidebar
				
				.page-lk__content
					.lk-min-header(data-da="page-lk__wrap,991,first")
						h1 Список желаемого

					.product-cards.wrapper-flex
						- for (var i=0; i < 6; i++)
							if !i%2 > 0
								div(class="product-card liked")
									.product-card__header
										.product-like
											+icon('heart-full')
										.sale-label -15%

									a(href="#").product-img
										img(src="img/prod-card-img.jpg" alt="alt")
								
									.product-card__content
										.product-availability В наличии
										
										a(href="#").product-title Карта оплаты World of Warcraft – 60 дней RU (ключ для ПК)
										
										.product-card__bottom
											.product-price
												.product-price__old
													.product-price__fail 2749 руб.
												.product-price__standart.product-price__standart--sale 2549 руб.

											a(href="#").product-card__buy.btn.btn-bg-green Купить
							

							else if i==2	
								div(class="product-card liked")
									.product-card__header
										.product-like
											+icon('heart-full')
										.sale-label -15%

									a(href="#").product-img
										img(src="img/prod-card-img.jpg" alt="alt")
								
									.product-card__content
										.product-availability В наличии
										
										a(href="#").product-title Карта оплаты World of Warcraft – 60 дней RU (ключ для ПК)
										
										.product-card__bottom
											.product-price
												.product-price__old
													.product-price__fail 2749 руб.
												.product-price__standart.product-price__standart--sale 2549 руб.

											a(href="#").product-card__buy.btn.btn-bg-green Купить
							else 	
								.product-card.liked
									.product-card__header
										.product-like
											+icon('heart-full')

									a(href="#").product-img
										img(src="img/prod-card-img.jpg" alt="alt")
								
									.product-card__content
										.product-availability В наличии
										
										a(href="#").product-title Карта оплаты World of Warcraft – 60 дней RU (ключ для ПК)
										
										.product-card__bottom
											.product-price
												.product-price__standart 2549 руб.

											a(href="#").product-card__buy.btn.btn-bg-green Купить

					.pagination
						a(href="#").pagination__prev
							+icon('pagination-prev')
						ul.pagination-list
							li.pagination-list__item
								a(href="#").pagination-list__link 1
							li.pagination-list__item
								a(href="#").pagination-list__link 2
							li.pagination-list__item.active
								a(href="#").pagination-list__link 3
							li.pagination-list__item
								a(href="#").pagination-list__link 4
							li.pagination-list__item
								a(href="#").pagination-list__link ...
							li.pagination-list__item
								a(href="#").pagination-list__link 7
						
						a(href="#").pagination__next
							+icon('pagination-next')

